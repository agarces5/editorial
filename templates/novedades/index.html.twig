{% extends 'base.html.twig' %}

{% block title %}Novedades{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="gallery">
{% for libro in libros %}
            <div class="card">
                <img src="/uploads/files/{{ libro.portada }}" class="card-img-top custom-card" alt="..." style="height:10rem; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">{{ libro.titulo }}</h5>
                    <p class="card-text">{{ libro.sinopsis|striptags|raw }}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
{% endfor %}
        </div>
    </div>
{% endblock %}
