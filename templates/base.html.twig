{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" lang="es-ES"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
      <link href="public/build/app.css" rel="stylesheet">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" lang="en" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark" style="height: 70px;">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none" style="width:40px;">
            <img src="public/assets/logo.jpg" alt="logo" class="img-fluid" />
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <li><a href="{{ path('app_homepage') }}" class="nav-link px-2 text-secondary">Inicio</a></li>
            <li><a href="{{ path('app_novedades') }}" class="nav-link px-2 text-white">Novedades</a></li>
            <li class="nav-item dropdown">
              <a class="nav-link px-2 text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Colecciones
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Aventura'}) }}">Aventura</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Ciencia Ficción'}) }}">Ciencia Ficción</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Drama'}) }}">Drama</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Fantasía'}) }}">Fantasía</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Humor'}) }}">Humor</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Infantil'}) }}">Infantil</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Misterio'}) }}">Misterio</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Romance'}) }}">Romance</a></li>
                <li><a class="dropdown-item" href="{{ path('app_colecciones', {'tema': 'Terror'}) }}">Terror</a></li>
              </ul>
            </li>
            <li><a href="{{ path('app_autores') }}" class="nav-link px-2 text-white">Autores</a></li>
            <li><a href="{{ path('app_contacto') }}" class="nav-link px-2 text-white">Contacto</a></li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
            <input type="search" class="form-control form-control-dark text-white bg-dark" placeholder="Search..." aria-label="Search">
            </form>

        </div>
        
        <div class="text-end">
          <a class="btn btn-outline-light me-2" href="{{ path('admin') }}">Admin</a>
          <a class="btn btn-outline-light me-2" href="{{ path('app_login') }}">Login</a>
          <a class="btn btn-warning" href="{{ path('registration') }}">Registrarse</a>
        </div>
    </div>
    </nav>
    {% block body %}{% endblock %} {% block javascripts %}{% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>